<%- | String $config_name,
      Optional[String] $account = undef,
      Optional[Sensitive] $secret_key = undef,
      Optional[Sensitive] $sas_url = undef,
| -%>
# Puppet managed file
[<%= $config_name %>]
type = azureblob
<% if $account { -%>
account = <%= $account %>
<% } -%>
<% if $secret_key { -%>
key = <%= $secret_key %>
<% } -%>
<% if $sas_url { -%>
sas_url = <%= $sas_url %>
<% } -%>
